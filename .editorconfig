# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Hapi style
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Matches the exact files either json or yml
[*.{json,yml}]
indent_style = space
indent_size = 2
